---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Tree Services - Signature Tree Service">
  <Header />
  
  <main>
    <section class="bg-green-700 text-white py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl font-bold mb-6">Our Tree Services</h1>
          <p class="text-xl text-green-100">
            Comprehensive tree care solutions for residential and commercial properties
          </p>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-3xl font-bold mb-4">Tree Removal</h2>
            <p class="text-gray-700 mb-6">Safe and efficient removal of hazardous, diseased, or unwanted trees with complete site cleanup.</p>
            <ul class="space-y-2">
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Hazardous tree removal</li>
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Dead or diseased tree removal</li>
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Complete debris cleanup</li>
            </ul>
          </div>

          <div class="bg-white rounded-xl shadow-lg p-8">
            <h2 class="text-3xl font-bold mb-4">Tree Trimming & Pruning</h2>
            <p class="text-gray-700 mb-6">Professional pruning to maintain tree health, safety, and enhance your property's aesthetic appeal.</p>
            <ul class="space-y-2">
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Crown reduction and thinning</li>
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Deadwood removal</li>
              <li class="flex items-center"><span class="text-green-600 mr-2">✓</span> Structural pruning</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
