---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact Us - Signature Tree Service">
  <Header />
  
  <main>
    <section class="bg-green-700 text-white py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl font-bold mb-6">Contact Signature Tree Service</h1>
          <p class="text-xl text-green-100">
            Ready to get started? Contact us today for a free consultation and estimate
          </p>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <div>
            <h2 class="text-3xl font-bold mb-8">Get Your Free Estimate</h2>
            <form class="space-y-6" onsubmit="gtag('event', 'form_submit', { 'event_category': 'engagement', 'event_label': 'contact_form' });">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                <input type="text" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Phone *</label>
                <input type="tel" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                <input type="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Service Needed *</label>
                <select required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
                  <option value="">Select a service</option>
                  <option value="tree-removal">Tree Removal</option>
                  <option value="tree-trimming">Tree Trimming/Pruning</option>
                  <option value="stump-grinding">Stump Grinding</option>
                  <option value="emergency">Emergency Service</option>
                  <option value="consultation">Tree Health Assessment</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                <textarea rows="4" placeholder="Please describe your tree service needs..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"></textarea>
              </div>
              <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition">
                Submit Request
              </button>
            </form>
          </div>

          <div>
            <h2 class="text-3xl font-bold mb-8">Get In Touch</h2>
            
            <!-- Emergency Contact -->
            <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
              <div class="flex items-center space-x-3 mb-4">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                <h3 class="text-xl font-semibold text-red-800">Emergency Services</h3>
              </div>
              <p class="text-red-700 mb-3">For urgent tree emergencies, storm damage, or hazardous situations:</p>
              <a href="tel:+18649990132" class="text-2xl font-bold text-red-800 hover:text-red-900" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'phone_click_emergency' });">
                (864) 999-0132
              </a>
              <p class="text-sm text-red-600 mt-2">Available 24/7</p>
            </div>

            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-green-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-lg">Phone</h4>
                  <p class="text-gray-600">Business Hours: Mon-Fri 7AM-6PM, Sat 8AM-4PM</p>
                  <a href="tel:+18649990132" class="text-xl font-semibold text-green-600 hover:text-green-700" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'phone_click_main' });">
                    (864) 999-0132
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-green-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-lg">Email</h4>
                  <p class="text-gray-600">We respond within 24 hours</p>
                  <a href="mailto:signaturetreegsp@gmail.com" class="text-green-600 hover:text-green-700" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'email_click' });">
                    signaturetreegsp@gmail.com
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <svg class="w-6 h-6 text-green-600 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <h4 class="font-semibold text-lg">Service Area</h4>
                  <p class="text-gray-600">Greenville and surrounding areas within 50 miles</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Media & Online Presence -->
    <section class="py-16 bg-green-50">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-6">Connect With Us Online</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          
          <!-- Google Business -->
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <svg class="w-12 h-12 text-blue-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            </svg>
            <h3 class="text-lg font-semibold mb-2">Google Business</h3>
            <p class="text-gray-600 text-sm mb-4">Find us on Maps & read reviews</p>
            <a href="https://share.google/Mr33PEfrAOVT3ZgXm" target="_blank" rel="noopener" class="text-blue-600 hover:text-blue-700 font-semibold text-sm" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'google_business_click' });">
              View Profile →
            </a>
          </div>

          <!-- Facebook -->
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <svg class="w-12 h-12 text-blue-700 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            <h3 class="text-lg font-semibold mb-2">Facebook</h3>
            <p class="text-gray-600 text-sm mb-4">Follow us for updates & photos</p>
            <a href="https://www.facebook.com/profile.php?id=61572324128488" target="_blank" rel="noopener" class="text-blue-700 hover:text-blue-800 font-semibold text-sm" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'facebook_click' });">
              Follow Us →
            </a>
          </div>

          <!-- Reviews -->
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <svg class="w-12 h-12 text-yellow-500 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <h3 class="text-lg font-semibold mb-2">Customer Reviews</h3>
            <p class="text-gray-600 text-sm mb-4">Read what customers say</p>
            <a href="https://share.google/Mr33PEfrAOVT3ZgXm" target="_blank" rel="noopener" class="text-yellow-600 hover:text-yellow-700 font-semibold text-sm" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'reviews_click' });">
              Read Reviews →
            </a>
          </div>

          <!-- Directions -->
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <svg class="w-12 h-12 text-green-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <h3 class="text-lg font-semibold mb-2">Get Directions</h3>
            <p class="text-gray-600 text-sm mb-4">Navigate to our service area</p>
            <a href="https://share.google/Mr33PEfrAOVT3ZgXm" target="_blank" rel="noopener" class="text-green-600 hover:text-green-700 font-semibold text-sm" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'directions_click' });">
              Get Directions →
            </a>
          </div>
        </div>

        <!-- Social Media CTA -->
        <div class="mt-12 bg-white rounded-lg p-8 shadow-md">
          <h3 class="text-2xl font-bold mb-4">Stay Connected</h3>
          <p class="text-gray-600 mb-6">Follow us on social media for tree care tips, project updates, and seasonal reminders!</p>
          <div class="flex justify-center space-x-4">
            <a href="https://www.facebook.com/profile.php?id=61572324128488" target="_blank" rel="noopener" class="bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-800 transition flex items-center space-x-2" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'facebook_cta_click' });">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              <span>Like Our Page</span>
            </a>
            <a href="https://share.google/Mr33PEfrAOVT3ZgXm" target="_blank" rel="noopener" class="bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition flex items-center space-x-2" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'review_cta_click' });">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
              <span>Leave a Review</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-green-600 text-white py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold mb-4">Ready to Get Started?</h2>
        <p class="text-xl mb-8">Contact us today for your free consultation and estimate</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+18649990132" class="bg-white text-green-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-green-50 transition duration-200" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'phone_click_cta' });">
            Call (864) 999-0132
          </a>
          <a href="mailto:signaturetreegsp@gmail.com" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-green-600 transition duration-200" onclick="gtag('event', 'click', { 'event_category': 'engagement', 'event_label': 'email_cta_click' });">
            Send Email
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
