---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Signature Tree Service - Expert Tree Removal & Trimming in Greenville, SC" description="Professional tree removal, trimming, and emergency services in Greenville, SC. Specializing in residential tree removal with limited access. 10+ years experience. Call (864) 999-0132">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-green-800 to-green-600 text-white">
      <div class="absolute inset-0 bg-black opacity-20"></div>
      <div class="relative container mx-auto px-6 py-24">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
            Expert Tree Removal & Tree Care Services in Greenville, SC
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-green-100">
            Specializing in residential tree removal with limited access • 10+ years of trusted service in Greenville and surrounding areas
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-white text-green-800 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-green-50 transition duration-200">
              Get Free Estimate
            </a>
            <a href="tel:+18649990132" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-green-800 transition duration-200">
              Emergency: (864) 999-0132
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-800 mb-4">Professional Tree Services in Greenville, SC</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Comprehensive tree care solutions for residential and commercial properties with over 10 years of experience
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Residential Tree Removal -->
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
            <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17,8C8,10 5.9,16.17 3.82,21.34L5.71,22L6.66,19.7C7.14,19.87 7.64,20 8,20C19,20 22,3 22,3C21,5 14,5.25 9,6.25C4,7.25 2,11.5 2,13.5C2,15.5 3.75,17.25 3.75,17.25C7,8 17,8 17,8Z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-semibold mb-4">Residential Tree Removal with Limited Access</h3>
            <p class="text-gray-600 mb-6">Expert tree removal in tight spaces, backyard access, and challenging residential locations. Safe removal without damage to property or landscaping.</p>
            <a href="/services" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>

          <!-- Tree Trimming & Pruning -->
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
            <div class="w-16 h-16 bg-green-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3V1M7 21v2"/>
              </svg>
            </div>
            <h3 class="text-2xl font-semibold mb-4">Professional Tree Trimming & Pruning</h3>
            <p class="text-gray-600 mb-6">Expert tree trimming and pruning services to maintain tree health, improve safety, and enhance your property's curb appeal.</p>
            <a href="/services" class="text-green-600 font-semibold hover:text-green-700">Learn More →</a>
          </div>

          <!-- Emergency Tree Services -->
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition duration-300">
            <div class="w-16 h-16 bg-red-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-semibold mb-4">24/7 Emergency Tree Services</h3>
            <p class="text-gray-600 mb-6">Round-the-clock emergency response for storm damage, fallen trees, and hazardous tree situations in Greenville area.</p>
            <a href="tel:+18649990132" class="text-red-600 font-semibold hover:text-red-700">Call Emergency: (864) 999-0132 →</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-800 mb-6">Why Choose Signature Tree Service?</h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold mb-2">Limited Access Specialists</h3>
                  <p class="text-gray-600">Expert residential tree removal in tight spaces, backyards, and challenging locations without property damage.</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold mb-2">10+ Years Experience</h3>
                  <p class="text-gray-600">Over a decade of proven tree care expertise serving Greenville and surrounding communities.</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold mb-2">Fully Licensed & Insured</h3>
                  <p class="text-gray-600">Complete liability and workers' compensation insurance for your peace of mind and property protection.</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-6 h-6 bg-green-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold mb-2">Free Estimates & Emergency Response</h3>
                  <p class="text-gray-600">No-obligation quotes with transparent pricing and 24/7 emergency tree services available.</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="lg:pl-8">
            <div class="bg-gray-100 rounded-2xl p-8">
              <h3 class="text-2xl font-bold mb-6 text-center">Get Your Free Estimate Today</h3>
              <form class="space-y-4">
                <div>
                  <input type="text" placeholder="Your Name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none">
                </div>
                <div>
                  <input type="tel" placeholder="Phone Number" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none">
                </div>
                <div>
                  <input type="email" placeholder="Email Address" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none">
                </div>
                <div>
                  <textarea placeholder="Describe your tree service needs..." rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none resize-none"></textarea>
                </div>
                <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition duration-200">
                  Get Free Estimate
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-green-600 text-white py-16">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold mb-4">Ready for Expert Tree Care in Greenville?</h2>
        <p class="text-xl mb-8">Professional tree services with specialized residential removal expertise • Serving Greenville, SC for 10+ years</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-green-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-green-50 transition duration-200">
            Schedule Free Consultation
          </a>
          <a href="tel:+18649990132" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-green-600 transition duration-200">
            Call (864) 999-0132
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
